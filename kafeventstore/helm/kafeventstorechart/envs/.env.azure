# Environment variables for Azure deployment
# Copy this file to .env.prod and update with your actual values

# Azure Configuration
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=your-kafka-cluster.eastus.azure.confluent.cloud:9092
KAFKA_TOPICS=events
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_USERNAME=your-kafka-username
KAFKA_PASSWORD=your-kafka-password

# Storage Configuration
STORAGE_BACKEND=azure
STORAGE_FORMAT=parquet
STORAGE_COMPRESSION=snappy
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_CONTAINER=events

# Image Configuration
IMAGE_REPOSITORY=youracr.azurecr.io/kafeventstore
IMAGE_TAG=1.0.0

# Deployment Configuration
NAMESPACE=kafeventstore
RELEASE_NAME=kafeventstore
REPLICAS=3
