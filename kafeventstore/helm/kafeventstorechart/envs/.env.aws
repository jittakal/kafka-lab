# Environment variables for AWS deployment
# Copy this file to .env.prod and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ROLE_ARN=arn:aws:iam::123456789012:role/kafeventstore-role

# Kafka Configuration (AWS MSK)
KAFKA_BOOTSTRAP_SERVERS=b-1.your-cluster.kafka.us-east-1.amazonaws.com:9098,b-2.your-cluster.kafka.us-east-1.amazonaws.com:9098
KAFKA_TOPICS=events
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=AWS_MSK_IAM

# Storage Configuration
STORAGE_BACKEND=s3
STORAGE_FORMAT=parquet
STORAGE_COMPRESSION=snappy
S3_BUCKET=your-events-bucket
S3_REGION=us-east-1

# Image Configuration
IMAGE_REPOSITORY=123456789012.dkr.ecr.us-east-1.amazonaws.com/kafeventstore
IMAGE_TAG=1.0.0

# Deployment Configuration
NAMESPACE=kafeventstore
RELEASE_NAME=kafeventstore
REPLICAS=3
