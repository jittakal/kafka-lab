# Example environment variables for local development
# Copy this file to .env.dev and update with your values

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=test-events
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_USERNAME=
KAFKA_PASSWORD=

# Storage Configuration (for local file backend)
STORAGE_BACKEND=file
STORAGE_FORMAT=parquet
STORAGE_COMPRESSION=snappy
FILE_BASE_PATH=/data/events

# Image Configuration
IMAGE_REPOSITORY=kafeventstore
IMAGE_TAG=latest

# Deployment Configuration
NAMESPACE=default
RELEASE_NAME=kafeventstore
REPLICAS=1
