# Environment variables for GCP deployment
# Copy this file to .env.prod and update with your actual values

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_SERVICE_ACCOUNT=kafeventstore@your-project-id.iam.gserviceaccount.com

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka-cluster.us-central1.gcp.confluent.cloud:9092
KAFKA_TOPICS=events
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_USERNAME=your-kafka-username
KAFKA_PASSWORD=your-kafka-password

# Storage Configuration
STORAGE_BACKEND=gcs
STORAGE_FORMAT=parquet
STORAGE_COMPRESSION=snappy
GCS_BUCKET=your-events-bucket
GCS_PROJECT_ID=your-project-id

# Image Configuration
IMAGE_REPOSITORY=gcr.io/your-project-id/kafeventstore
IMAGE_TAG=1.0.0

# Deployment Configuration
NAMESPACE=kafeventstore
RELEASE_NAME=kafeventstore
REPLICAS=3
